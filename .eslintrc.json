{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "page": true,
    "browser": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": false
      }
    }],

    "prefer-destructuring": ["error", {
      "VariableDeclarator": {
        "array": false,
        "object": true
      },
      "AssignmentExpression": {
        "array": false,
        "object": true
      }
    }, {
      "enforceForRenamedProperties": false
    }],

    "object-curly-newline": ["error", { "consistent": true }],
    "no-underscore-dangle": 0,
    "no-use-before-define": [ 2, { "functions": false } ],
    "prefer-const": 1,
    "import/newline-after-import": false,
    "no-unused-vars": 1,
    "no-console": 0
  }
}